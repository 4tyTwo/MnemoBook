<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import org.fxmisc.richtext.CodeArea?>
<fx:root type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" spacing="5" fx:controller="Controllers.EditorPaneController">
    <padding>
        <Insets left="10" right="10" top="10" bottom="10"/>
    </padding>
    <VBox style="-fx-background-color: rgba(210, 210, 210, 0.5);">
        <padding>
            <Insets top="100"/>
        </padding>
        <Label text="Reserved space" minWidth="70"/>
    </VBox>
    <VBox>
        <Label fx:id="currentFileName" text="untitled" style="-fx-border-color:black; -fx-border-width: 1 1 0 1; -fx-border-style: solid; -fx-border-radius: 5px 5px 0px 0px; -fx-padding: 0 3 0 3;"/>
        <CodeArea fx:id="codeEditor"/>
    </VBox>
</fx:root>
